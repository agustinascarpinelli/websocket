<h1>List of products</h1>
{{#if products.length}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Title</th> <th>Price</th> <th>Image</th> </tr>
{{#each products}}
            <tr>
                <td >{{this.title}}</td>
                <td>{{this.price}}</td>
                <td><img src={{this.thumbnail}} style="width: 5rem; height:auto"></img></td>            
            </tr>
            {{/each}}
        </table>
    </div>

{{else}}
    <h3 class="alert alert-danger">There's no products to show</h3> 

    
{{/if}}